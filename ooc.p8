pico-8 cartridge // http://www.pico-8.com
version 29
__lua__

-- player
p1 = {}
-- sprite
p1.s = 64

-- game state
gs = {}

-- game mode
-- 0: title
-- 1: gameplay
-- 2: ???
-- 3: ???
gs.mode = 1

function get_input()
  if btnp(0) then p1.x -= 1 end
  if btnp(1) then p1.x += 1 end
  if btnp(2) then p1.y -= 1 end
  if btnp(3) then p1.y += 1 end
end

function load_map(i)
  -- load map based on index
  gs.map = i

  -- spawn actors based on spawn tiles
  p1.x = 0
  p1.y = 0
end

function _init()
  load_map(0)
end

function _draw()
  cls()
  map(0, 0, 0, 0, 16, 16)
  spr(p1.s, p1.x * 8, p1.y * 8)
  print("x: " .. p1.x)
  print("y: " .. p1.y)
end

function _update60()
  get_input()
end

